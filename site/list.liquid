title: Test
---
<div class="container">
  {% for user in users %}
    <div class="row">
      <div class="col">
        <div class="row p-3 border my-2 rounded">
          <div class="col-3 d-flex justify-content-center align-items-center border-end">
            <img class="img-fluid" src="{{ user.picture.large }}" alt="{{ user.name.first }} {{ user.name.last }}" >
          </div>
          <div class="col-9 d-flex justify-content-center align-items-start flex-column ps-5">
            <h2>{{ user.name.first }} {{ user.name.last }}</h2>
            <p>{{ user.email }}</p>
            <p>{{ user.phone }}</p>
            <p class="mb-0">{{ user.location.city }}, {{ user.location.state }}</p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
